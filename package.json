{
  "name": "vue-test",
  "description": "A Vue.js project",
  "version": "1.0.0",
  "author": "Abraham Haskins <abeisgreat@abeisgreat.com>",
  "private": true,
  "scripts": {
    "fmt": "prettier --write src/components/**/**.ts src/**.ts test/**/**.ts test/**/**.js *.js",
    "dev": "cross-env NODE_ENV=development webpack-dev-server --hot",
    "build": "npm run fmt && cross-env NODE_ENV=production webpack --progress --hide-modules",
    "test": "npm run fmt && jest test --no-cache || true"
  },
  "dependencies": {
    "@firebase/app-types": "^0.1.0",
    "firebase": "^4.8.0",
    "firebase-tools": "^3.16.0",
    "html-loader": "^0.5.1",
    "isomorphic-fetch": "^2.2.1",
    "jest": "^20.0.4",
    "jest-vue-preprocessor": "^1.1.0",
    "openpgp": "^2.6.0",
    "sass-loader": "^6.0.6",
    "vue": "^2.3.3",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "@types/chai": "^4.0.3",
    "@types/core-js": "^0.9.42",
    "@types/mocha": "^2.2.41",
    "@types/node": "^8.0.22",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.0.0",
    "babel-jest": "^20.0.3",
    "babel-loader": "^6.0.0",
    "babel-preset-env": "^1.5.1",
    "babel-preset-es2015": "^6.24.1",
    "chai": "^4.1.1",
    "cross-env": "^3.0.0",
    "css-loader": "^0.25.0",
    "file-loader": "^0.9.0",
    "jest": "^20.0.4",
    "node-sass": "^4.5.3",
    "postcss-loader": "^2.0.6",
    "postcss-sass": "^0.2.0",
    "prettier": "^1.5.3",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.18.2",
    "ts-loader": "^2.3.2",
    "vue-template-compiler": "^2.4.2",
    "vue-template-compiler-loader": "^1.0.4",
    "vue-template-loader": "^0.3.1",
    "webpack": "^2.6.1",
    "webpack-dev-server": "^2.4.5"
  },
  "jest": {
    "testRegex": "spec.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.html": "<rootDir>/test/__pre__/template",
      "^.+\\.(ts|tsx)$": "<rootDir>/test/__pre__/typescript"
    }
  }
}
